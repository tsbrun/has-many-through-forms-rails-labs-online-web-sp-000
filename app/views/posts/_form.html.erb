<%= form_for @post do |f| %>
    <%= f.label "Title" %><br />
    <%= f.text_field :title %><br /><br />
    <%= f.label "Content" %><br />
    <%= f.text_area :content %><br /><br />
    <%= f.label "Categories" %><br />
    <%= f.collection_check_boxes :category_ids, Category.all, :id, :name, include_blank: true %><br /><br />
    <%= f.label "Add New Category" %><br />
    <%= f.fields_for :categories, @post.categories.build do |categories_fields| %>
        <%= categories_fields.text_field :name %>
    <% end %><br /><br />

    <%= f.submit %>
<% end %>
